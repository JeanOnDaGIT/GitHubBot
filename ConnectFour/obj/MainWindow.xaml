<Window x:Class="ConnectFour.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectFour"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF3F0C58" Offset="0.497"/>
                <GradientStop Color="#FF7D1B94" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="start_b" Content="Start" HorizontalAlignment="Center" Height="50" Margin="0,230,0,0" VerticalAlignment="Top" Width="180" Click="Start_Click"/>
        <Button x:Name="instructions_b" Content="Instructions" HorizontalAlignment="Center" Height="50" Margin="0,300,0,0" VerticalAlignment="Top" Width="220" Click="Inst_Click"/>
        <Button x:Name="quit_b" Content="Quit" HorizontalAlignment="Center" Height="50" Margin="0,374,0,0" VerticalAlignment="Top" Width="180" Click="Quit_Click"/>
        <Image x:Name="Title_Name" Margin="218,49,218,222" Source="/Illustration3.png" Stretch="Fill"/>

    </Grid>
</Window>